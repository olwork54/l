mixin icon(name, mod)
	if(mod)
		svg(class="svg-sprite-icon icon-" + name + ' ' + mod)
			use(xlink:href="static/images/sprite/symbol/sprite.svg#" + name)
	else
		svg(class="svg-sprite-icon icon-" + name)
			use(xlink:href="static/images/sprite/symbol/sprite.svg#" + name)

mixin mixinCard(iconSrc, text, alt)
	.card
		img.img.lazyload(data-src=iconSrc, alt=alt)
		.title= text
		//- .description= text

mixin ru(content)
	if lang === 'ru'  
		= content

mixin en(content)
	if lang === 'en'  
		= content



