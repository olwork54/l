mixin icon(name,mod)
	if(mod)
		svg(class="svg-sprite-icon icon-" + name + ' ' + mod)
			use(xlink:href="static/images/sprite/symbol/sprite.svg#" + name)
	else
		svg(class="svg-sprite-icon icon-" + name)
			use(xlink:href="static/images/sprite/symbol/sprite.svg#" + name)

mixin mixinCard(className,iconSrc,title,text)
	.card(class=className)
		img.icon.lazyload(src="./static/images/common/preview.png",data-src=iconSrc, alt="")
		.title= title
		.description= text

mixin ru(content)
	if lang === 'ru'  
		= content

mixin en(content)
	if lang === 'en'  
		= content



