            li
                .icon-wrap
                    img.preview.lazyload.preloader(data-src="./static/images/common/improve-health/Insomnia.png", alt="Insomnia")
                .item-body
                    span.title Insomnia
                    .description The calm and pleasure afforded by a full-immersion walk-in tub help the brain and body to relax, letting you sleep better.
            li
                .icon-wrap
                    img.preview.lazyload.preloader(data-src="./static/images/common/improve-health/Diabetes.png", alt="Diabetes")
