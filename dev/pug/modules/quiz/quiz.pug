                        .radio-custom
                            input(name="name-2" id="id2" type="radio" value="1")
                            label(for="id2") 
                                img(src="./static/images/common/reviews/profile-boy.svg", alt="")
                                .name: span sdg

                        .radio-custom
                            input(name="name-2" id="id3" type="radio" value="1")
                            label(for="id3") 
                                img(src="./static/images/common/reviews/profile-boy.svg", alt="")
                                .name: span sdgsdg
                    p.data-info 

                    .aplay-btn-wrapper 
                        button.aplay-btn(disabled) next
                        button.no-btn.hide no
                        button.yes-btn.hide yes


                .step.next(data-info="text ") 
                    .step-title Why are you interested in a walk-in tub?
