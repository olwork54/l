section.quiz.modal
    .container 
        .modal-header 
            .logo 
                img(src="./static/images/common/logo-dark.svg", alt="")
            .close-modal-btn X 
        
        .hero-wrapper
            .hero-msg msg
            img.hero.lazyload(data-src="./static/images/common/header/header-bg-img.png", alt="")
            


        .modal-body 
            .progress-wrapper
                #form-progress.progress
            form#step-form.step-wrapper(action="./success.html" method="POST")
                input.zip-input(type="hidden" name="zip code")


                .step.next(data-info="Let`s get started on your walk-in tub estimate!" data-type="radio") 
                    .step-title Why are you interested in a walk-in tub?
                    .answer-wrapper
                        .radio-custom
                            input(name="why_interested" data-info="data inf 1" id="why_interested-1" type="radio" value="1")
                            label(for="why_interested-1") 
                                img(src="./static/images/common/reviews/profile-boy.svg", alt="")
                                .name: span Safty

                        .radio-custom
                            input(name="why_interested" id="why_interested-2" type="radio" value="1")
                            label(for="why_interested-2") 
                                img(src="./static/images/common/reviews/profile-boy.svg", alt="")
                                .name: span Safty

                        .radio-custom
                            input(name="why_interested" id="why_interested-3" type="radio" value="1")
                            label(for="why_interested-3") 
                                img(src="./static/images/common/reviews/profile-boy.svg", alt="")
                                .name: span Safty

                    p.data-info 

                    .btns
                    .aplay-btn-wrapper 
                        button.aplay-btn(disabled) next
                        button.no-btn.hide no
                        button.yes-btn.hide yes
                            


                .step.next(data-type="radio") 
                    .step-title Why are you interested in a walk-in tub?
                    .answer-wrapper
                        .radio-custom
                            input(name="name-2" data-info="data inf 2" id="id1" type="radio" value="1")
